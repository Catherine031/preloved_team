<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Intense shadow -->
            <corners android:radius="140dp" />
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <stroke android:width="8dp" android:color="#000000" /> <!-- Thin orange border -->
            <corners android:radius="170dp" />
        </shape>
    </item>

</layer-list>
